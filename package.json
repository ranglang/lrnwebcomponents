{
    "name": "lrnwebcomponents",
    "description": "ELMSLN produced web components for any project",
    "wcfactory": {
        "askSASS": true,
        "askProps": true,
        "askHAX": true,
        "monorepo": "lrnwebcomponents",
        "orgNpm": "@lrnwebcomponents",
        "orgGit": "elmsln",
        "gitRepo": "https://github.com/elmsln/lrnwebcomponents.git",
        "sass": {
            "name": "rh-sass",
            "pkg": "@rhelements/rh-sass",
            "path": "rh-sass/rh-sass"
        }
    },
    "author": {
        "name": "elmsln",
        "url": "https://www.elmsln.org/"
    },
    "license": "Apache-2.0",
    "repository": "git@github.com/elmsln/lrnwebcomponents.git",
    "scripts": {
        "start": "bash scripts/preinstall.sh && yarn run storybook",
        "lerna": "lerna",
        "preinstall": "bash scripts/preinstall.sh",
        "postinstall": "bash scripts/postinstall.sh",
        "init": "lerna init",
        "test": "yarn run build && wct --configFile wct.conf.json test/index.html",
        "build": "lerna run build --no-bail",
        "publish": "echo 'NOTICE: You must run `lerna publish` manually'",
        "test-suite-inject": "node scripts/test-suite-inject.js",
        "storybook": "npx --max_old_space_size=16384 start-storybook --node-resolve --watch --open",
        "build-storybook": "bash scripts/preinstall.sh && npx --max_old_space_size=16384 build-storybook && bash scripts/postinstall.sh",
        "rebuild-wcfcache": "./node_modules/.bin/gulp",
        "new": "yarn run rebuild-wcfcache && wcf element && yarn run test-suite-inject && yarn install --link-duplicates"
    },
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@babel/plugin-proposal-class-properties": "7.10.4",
        "@emotion/core": "0.13.1",
        "@emotion/styled": "0.10.6",
        "@open-wc/building-utils": "2.14.3",
        "@open-wc/demoing-storybook": "^1.15.1",
        "@open-wc/storybook": "^0.2.8",
        "@open-wc/webpack-import-meta-loader": "^0.4.4",
        "@rollup/plugin-commonjs": "^11.0.2",
        "@webcomponents/webcomponentsjs": "2.4.1",
        "babel-loader": "^7.0.0",
        "babel-plugin-external-helpers": "6.22.0",
        "babel-plugin-transform-custom-element-classes": "0.1.0",
        "babel-plugin-transform-es2015-modules-umd": "6.24.1",
        "babel-preset-env": "1.7.0",
        "body-parser": "1.19.0",
        "browser-sync": "2.26.3",
        "chalk": "2.4.2",
        "concurrently": "5.1.0",
        "core-js": "3.6.4",
        "css-scss": "0.1.1",
        "decomment": "0.9.2",
        "del": "3.0.0",
        "dialog-polyfill": "0.4.10",
        "es-dev-server": "1.46.0",
        "express": "4.17.1",
        "file-loader": "^3.0.1",
        "global": "4.3.2",
        "gulp": "4.0.0",
        "gulp-babel": "8.0.0",
        "gulp-clean-css": "4.0.0",
        "gulp-concat-util": "0.5.5",
        "gulp-copy": "4.0.1",
        "gulp-minify-html-literals": "1.1.7",
        "gulp-rename": "1.4.0",
        "gulp-replace": "1.0.0",
        "gulp-sass": "4.0.2",
        "gulp-sequence": "1.0.0",
        "gulp-shell": "0.6.5",
        "gulp-strip-css-comments": "2.0.0",
        "gulp-svg-sprite": "1.5.0",
        "gulp-terser": "1.2.0",
        "gulp-trim": "1.0.2",
        "helmet": "3.21.2",
        "husky": "4.2.0",
        "imagemin-lint-staged": "0.4.0",
        "inquirer-recursive": "0.0.6",
        "jest": "24.1.0",
        "lerna": "3.20.2",
        "lint-staged": "8.1.7",
        "lodash": "4.17.19",
        "lodash.clonedeep": "4.5.0",
        "lorem-ipsum": "^2.0.3",
        "node-sass": "4.13.1",
        "polymer-build": "3.1.4",
        "polymer-cli": "1.9.11",
        "polymer-webpack-loader": "2.0.3",
        "prettier": "1.16.4",
        "raw-loader": "1.0.0",
        "react": "*",
        "react-dom": "*",
        "regenerator-runtime": "^0.13.5",
        "requirejs": "2.3.6",
        "rollup": "^1.20.0",
        "rollup-plugin-auto-external": "^2.0.0",
        "rollup-plugin-babel": "4.3.2",
        "rollup-plugin-delete": "0.2.1",
        "rollup-plugin-rewrite-imports": "^1.0.1",
        "rollup-plugin-terser": "4.0.4",
        "strip-css-comments": "3.0.0",
        "stylelint": "13.0.0",
        "symlink-dir": "3.1.1",
        "trim": "0.0.1",
        "wct-browser-legacy": "1.0.2",
        "web-component-analyzer": "1.0.3",
        "web-component-tester": "6.9.2",
        "webpack": "4.29.3",
        "webpack-node-externals": "^1.7.2",
        "whatwg-fetch": "3.0.0",
        "yo": "2.0.6"
    },
    "dependencies": {
        "@open-wc/storybook-prebuilt": "^1.2.0",
        "rollup-plugin-cpy": "^2.0.1",
        "fetch-ie8": "1.5.0",
        "lunr": "2.3.6",
        "promise-polyfill": "8.1.3"
    },
    "lint-staged": {
        "*.{js,json}": "prettier --write",
        "*.{png,jpeg,jpg,gif,svg}": [
            "imagemin-lint-staged",
            "git add"
        ],
        "*.css": "stylelint --fix",
        "*.scss": "stylelint --syntax=scss --fix"
    },
    "keywords": [
        "yeoman-generator",
        "custom-elements",
        "web-components",
        "webcomponents",
        "polymer",
        "lit-element",
        "skate-js",
        "slim-js",
        "twig",
        "lit-html",
        "vanillajs"
    ],
    "private": true,
    "npmClient": "yarn",
    "useWorkspaces": true,
    "workspaces": {
        "packages": [
            "elements/*",
            "themes/*"
        ],
        "nohoist": []
    },
    "husky": {
        "hooks": {
            "pre-commit": "yarn run test-suite-inject > /dev/null && lint-staged"
        }
    }
}
